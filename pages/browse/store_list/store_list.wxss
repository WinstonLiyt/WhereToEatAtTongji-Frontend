/**store_list.wxss**/
page {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* background-color: #fff2d9; */
  background-color:var(--tertiary-color);
}
.search {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  position:relative;
  top:20rpx;
  margin-bottom: 20px;
}
.search .search_in {
  display: flex;
  align-items: center;
  justify-content:space-between;
  padding: 0 10rpx;
  box-sizing: border-box;
  height: 90rpx;
  width: 700rpx;
  background-color: #ffffff;
  border-radius: 100rpx;
}
.search_in image {
  height: 45rpx;
  width: 45rpx;
}
.search input {
  margin-left: 25rpx;
  width: 80%;
}
.search_in .search_btn {
  height: 80rpx;
  width: 80rpx;
  border-radius: 100%;
  background-color: var(--primary-color);
  color: var(--secondary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 55rpx;
  cursor: pointer;
}

.choose_bar{
  position: relative;
  top:20rpx;
  padding: 10rpx 10rpx 10rpx 10rpx;
  left:2.5%;
  width:92%;
  height:max-content;
  background-color: #ffffff;
  border-radius: 15px;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  /* box-shadow: 0 2px 4px #a5a5a5; */
}

.food_type{
  margin-top:22rpx;
  margin-bottom: 22rpx;
  margin-left:38rpx;
  margin-right: 38rpx;
  width: 95rpx;
  height:max-content;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.food_type image{
  width:80rpx;
  height:80rpx;
}
.food_type text{
  font-size: 12px;
  letter-spacing: 3px;
}
.type_click{
  margin-top:22rpx;
  margin-bottom: 22rpx;
  margin-left:38rpx;
  margin-right: 38rpx;
  width: 95rpx;
  height:max-content;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  /* box-shadow: 0 2px 4px #a5a5a5; */
  border-radius: 10px;
  border:1px dashed;
  border-color:#c4bba5;
}
.type_click image{
  width:80rpx;
  height:80rpx;
}
.type_click text{
  font-size: 12px;
  letter-spacing: 3px;
}
.list_bar{
  position: relative;
  top:60px;
  padding-left: 5%;
  width:95%;
  height:max-content;
  background-color: #fcf9e9;
  border-radius:40px 40px 0 0;
  /* border-top: 6rpx dashed rgb(230, 220, 205);  */
}

.title{
  width:65%;
  height: 90rpx;
  border-radius: 30px;
  /* background-color: #ffffff;
  box-shadow: 0 2px 4px #a5a5a5; */
  background-color: var(--card-background);
  box-shadow: 0 2px 4px #c7c7c7;
  position: relative;
  top:-25px;
  left:2%;
  display:flex;
  overflow: hidden;
  align-items: center; /* 垂直居中 */
}

.title .title_pic{
  aspect-ratio: 1 / 1;
  height: 75%;
  border-radius: 100%;
  border: 2px solid rgb(199, 199, 199);
  position:relative;
  left:4%; 
  display:flex;
  overflow: hidden;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}
.title_pic image{
  max-width: 90%;
  max-height: 90%;
}

.title_name{
  position: relative;
  margin-left: 8%;
}
.title_name text{
  font-size:17px;
  font-weight: bold;
  letter-spacing: 1.5px;
}

.store{
  position:relative;
  margin-top:20rpx;
  margin-bottom:40rpx;
  width:95%;
  height:90px;
  background-color: #ffffff;
  border-radius: 15px;
  display: flex;
  /* box-shadow: 0 2rpx 5rpx rgb(187, 175, 159); */
  overflow: hidden;
}

.store_image{
  display: flex;
  border-radius: 10px;
  position:absolute;
  top:7.5%;
  left:3%;
  height:85%;
  /* height:80px; */
  aspect-ratio: 1 / 1;
  overflow: hidden;
  margin-right: 5px;
}

.store_image image{
  max-width: 100%;
  max-height: 100%;
  object-fit: cover;
  object-position: center top; /* 图片在容器中水平居中，垂直顶部对齐 */
}

.store_name{
  position: absolute;
  margin-left: 10px;
  top:20%;
  left:90px;
}
.store_name text{
  font-size: 17px;
  letter-spacing: 1px;
  font-weight:bold;
}
.other{
  position:absolute;
  top:60%;
  left:90px;
  margin-left: 10px;
}
.other text{
  font-size: 12px;
  letter-spacing: 1px;
  font-weight:100;
  color:rgb(121, 121, 121);
}

.turn{
  position:absolute;
  top:40px;
  left:90%;
  width:20px;
  height: 20px;
}
.turn image{
  max-width: 100%;
  max-height: 100%;
}