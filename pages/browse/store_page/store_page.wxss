.food_text{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: calc(100% - 200rpx);
  height: 100%;
  overflow-x: auto;
  white-space: nowrap;
}
.food_name text{
  font-size: 30rpx;
  letter-spacing: 2px;
  font-weight:bold;
}

.other{
  display: flex;
}
.other text{
  font-size: 20rpx;
  letter-spacing: 2rpx;
  font-weight:100;
  color:rgb(148, 148, 148);
}

.food_right{
  width: 35%;
  height: 100%;
  padding-right: 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.food_price{
  /* max-width: 150px; */
  width: 300rpx;
  overflow-x: auto;
}
.food_price text{
  font-size: 28rpx;
  letter-spacing: 2px;
  font-weight:bold;
  white-space: nowrap;
}

.turn{
  top:80rpx;
  left:90%;
  width:40rpx;
  height: 40rpx;
}
.turn image{
  max-width: 100%;
  max-height: 100%;
}
.telephone{
  position: relative;
  display:flex;
  overflow: hidden;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  height:100rpx;
}
.telephone text{
  font-size: 20rpx;
  color:#747474;
  letter-spacing: 2rpx;
}