<view class="top_pic">
  <image src="{{store.store.imgSrc}}" mode="aspectFill"></image>
</view>
<view class="store_block">
  <view class="title">
    <view class="title_pic">
      <image src="/statics/pic_tag/western.png " mode="aspectFill"></image>
    </view>
    <view class="title_name">
      <scroll-view scroll-x="true" class="scrollable-text">
        <text>{{store.store.name}}</text>
      </scroll-view>
    </view>
  </view>
  <view class="description_title">
    <text>Description</text>
  </view>
  <view class="description">
    <text>{{store.store.description}}</text>
  </view>
  <view class="place">
    <image src="/statics/pic_tool/place.png" mode="aspectFill"></image>
    <text>{{store.store.location}}</text>
  </view>
  <view class="food_list">
    <view class="food"  wx:for="{{store.foodlist}}" wx:key="key" mark:foodid="{{item.id}}" bindtap="next_calculator" id="{{item.id}}"> 
      <view class="food_image">
        <image src="{{item.imgSrc}}" mode="aspectFill"></image>
      </view>
      <view class="food_name">
        <text >{{item.name}}</text>
      </view>
      <view class="food_price">
        <text >￥{{item.price}}</text>
      </view>
      <view class="other">
        <text decode="true">{{item.description}}</text>
      </view>
      <view class="turn">
        <image src="/statics/pic_tool/turn.png"></image>
      </view>
    </view>
  </view>
  <view class="telephone">
    <text>联系方式：{{store.store.telephone}}</text>
  </view>
</view>