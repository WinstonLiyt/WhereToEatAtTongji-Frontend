/* pages/browse/food_page/search.wxss */
page {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* background-color: #fff2d9; */
  background-color:var(--tertiary-color);
}
.fail{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  /* width: 100%; */
}
.fail image{
  width: 350rpx;
  height: 350rpx;
  margin-top: -70%;
  margin-left: 10%;
}
h1{
  font-size: 60rpx;
  letter-spacing: 2rpx;
  font-weight: var(--fontweight-bold);
  color: var(--secondary-color);
}

.list_bar{
  position: relative;
  top:120rpx;
  padding-left: 5%;
  width:95%;
  height:max-content;
  background-color: #fcf9e9;
  border-radius:80rpx 80rpx 0 0;
  padding-bottom: 20rpx;
  border-top: 6rpx dashed rgb(230, 220, 205); 
}

.title{
  width:65%;
  height: 90rpx;
  border-radius: 60rpx;
  /* background-color: #ffffff;
  box-shadow: 0 2px 4px #a5a5a5; */
  background-color: var(--card-background);
  box-shadow: 0 4px 8px #c7c7c7;
  position: relative;
  top:-50rpx;
  left:2%;
  display:flex;
  overflow: hidden;
  align-items: center; /* 垂直居中 */
}

.title_pic{
  aspect-ratio: 1 / 1;
  height: 75%;
  border-radius: 100%;
  border: 4rpx solid rgb(199, 199, 199);
  position:relative;
  left:2%; 
  display:flex;
  overflow: hidden;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}
.title_pic image{
  max-width: 90%;
  max-height: 90%;
}

.title_name{
  position: relative;
  margin-left: 8%;
}
.title_name text{
  font-size:30rpx;
  font-weight: bold;
  letter-spacing: 3px;
}
.store_dishes{
  display: flex;
  flex-wrap: nowrap;
  position: relative;
  padding-bottom: 20rpx;
  padding-top:60rpx;
}
.btn_click{
  width:35%;
  height: 90rpx;
  border-radius: 20rpx;
  /* background-color: #ffffff;
  box-shadow: 0 2px 4px #a5a5a5; */
  background-color: rgb(223, 209, 183);
  box-shadow: 0 4rpx 8rpx #c7c7c7;
  position: relative;
  left:2%;
  display:flex;
  overflow: hidden;
  align-items: center; /* 垂直居中 */
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.store_btn{
  width:35%;
  height: 90rpx;
  border-radius: 20rpx;
  /* background-color: #ffffff;
  box-shadow: 0 2px 4px #a5a5a5; */
  background-color: var(--card-background);
  box-shadow: 0 4rpx 8rpx #c7c7c7;
  position: relative;
  left:2%;
  display:flex;
  overflow: hidden;
  align-items: center; /* 垂直居中 */
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.dishes_btn{
  width:35%;
  height: 90rpx;
  border-radius: 20rpx;
  /* background-color: #ffffff;
  box-shadow: 0 2px 4px #a5a5a5; */
  background-color: var(--card-background);
  /* background-color: rgb(221, 206, 178); */
  box-shadow: 0 4rpx 8rpx #c7c7c7;
  position: relative;
  display:flex;
  overflow: hidden;
  align-items: center; /* 垂直居中 */
  margin-left: 50rpx;
  margin-right: 30rpx;
}
.btn_pic{
  aspect-ratio: 1 / 1;
  height: 55%;
  border-radius: 100%;
  /* border: 2px solid rgb(199, 199, 199); */
  position:relative;
  left:10%; 
  display:flex;
  overflow: hidden;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}
.btn_pic image{
  max-width: 90%;
  max-height: 90%;
}
.btn_name{
  position: relative;
  margin-left: 15%;
}
.btn_name text{
  font-size:28rpx;
  font-weight: bold;
  letter-spacing: 3rpx;
}
.store{
  position:relative;
  margin-top:20rpx;
  margin-bottom:40rpx;
  width:95%;
  height:170rpx;
  background-color: var(--card-background);
  border-radius: 30rpx;
  display: flex;
  border-bottom: 5rpx solid var(--primary-color);
  /* box-shadow: 0 2rpx 5rpx rgb(187, 175, 159); */
  overflow: hidden;
}

.store_image{
  display: flex;
  border-radius: 20rpx;
  position:absolute;
  top:13%;
  left:3%;
  height:130rpx;
  width:130rpx;
  overflow: hidden;
  margin-right: 10rpx;
}

.store_image image{
  max-width: 100%;
  max-height: 100%;
  object-fit: cover;
  object-position: center top; /* 图片在容器中水平居中，垂直顶部对齐 */
}

.store_name{
  position: absolute;
  margin-left: 20rpx;
  top:20%;
  left:180rpx;
}
.store_name text{
  font-size: 30rpx;
  letter-spacing: 2rpx;
  font-weight:bold;
}
.store .other{
  position:absolute;
  top:60%;
  left:180rpx;
  flex-direction: column;
  margin-left: 20rpx;
  width: calc(100% - 300rpx);
  height: 100%;
  overflow-x: auto;
  white-space:nowrap;  
}
.store .other text{
  font-size: 20rpx;
  letter-spacing: 2rpx;
  font-weight:100;
  color:rgb(121, 121, 121);
}

.store .turn{
  position:absolute;
  top:80rpx;
  left:90%;
  width:40rpx;
  height: 40rpx;
}
.store .turn image{
  max-width: 100%;
  max-height: 100%;
}
.food{
  position:relative;
  margin-top:40rpx;
  margin-bottom:40rpx;
  width:95%;
  height:180rpx;
  background-color: var(--card-background);
  border-radius: 30rpx;
  display: flex;
  border-bottom: 5rpx solid var(--primary-color);
  box-shadow: 0 2rpx 5rpx rgb(187, 175, 159);
  justify-content: space-between;
  align-items: center;
  overflow: visible; 
}
.food_left{
  display: flex;
  width: 60%;
  height: 100%;
  align-items: center;
}
.food_image{
  margin-left: 35rpx;
  margin-right: 35rpx;
  border-radius: 20rpx;
  height: 100rpx;
  width: 100rpx;
}
.food_text{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: calc(100% - 200rpx);
  height: 100%;
  overflow-x: auto;
  white-space: nowrap;
}
.food_name text{
  font-size: 30rpx;
  letter-spacing: 2rpx;
  font-weight:bold;
}

.food .other{
  display: flex;
}
.food .other text{
  font-size: 20rpx;
  letter-spacing: 2rpx;
  font-weight:100;
  color:rgb(148, 148, 148);
}

.food_right{
  width: 35%;
  height: 100%;
  padding-right: 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.food_price{
  /* max-width: 150px; */
  width: 300rpx;
  overflow-x: auto;
}
.food_price text{
  font-size: 30rpx;
  letter-spacing: 2rpx;
  font-weight:bold;
  white-space: nowrap;
}

.food .turn{
  top:80rpx;
  left:90%;
  width:40rpx;
  height: 40rpx;
}
.food .turn image{
  max-width: 100%;
  max-height: 100%;
}

.store_fail{
  width:100%;
  height:600rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.store_fail image{
  width: 350rpx;
