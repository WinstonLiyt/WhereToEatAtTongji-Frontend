}
h1{
  font-size: 30px;
  letter-spacing: 1px;
  font-weight: var(--fontweight-bold);
  color: var(--secondary-color);
}

.list_bar{
  position: relative;
  top:60px;
  padding-left: 5%;
  width:95%;
  height:max-content;
  background-color: #fcf9e9;
  border-radius:40px 40px 0 0;
  padding-bottom: 20rpx;
  border-top: 6rpx dashed rgb(230, 220, 205); 
}

.title{
  width:65%;
  height: 90rpx;
  border-radius: 30px;
  /* background-color: #ffffff;
  box-shadow: 0 2px 4px #a5a5a5; */
  background-color: var(--card-background);
  box-shadow: 0 2px 4px #c7c7c7;
  position: relative;
  top:-25px;
  left:2%;
  display:flex;
  overflow: hidden;
  align-items: center; /* 垂直居中 */
}

.title_pic{
  aspect-ratio: 1 / 1;
  height: 75%;
  border-radius: 100%;
  border: 2px solid rgb(199, 199, 199);
  position:relative;
  left:2%; 
  display:flex;
  overflow: hidden;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}
.title_pic image{
  max-width: 90%;
  max-height: 90%;
}

.title_name{
  position: relative;
