/* pages/user_role_choice/user_role_choice.wxss */
page{
  background-color: var(--tertiary-color);
  height: 100%;
}

.main{
  overflow: scroll;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text-container{
  color: var(--secondary-color);
  font-size: 70rpx;
  font-weight: var(--fontweight-bold);
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 80%;
}

.text-container p{
  color: #b6855d79;
  font-size: 40rpx;
  font-weight: var(--fontweight-normal);
}

.card-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.card{
  position: relative;
  background-color: var(--primary-color);
  width: 65%;
  height: 200rpx;
  margin-bottom: 60rpx;
  border-radius: 50rpx;
  padding: 60rpx;
  overflow: hidden;
}


h2{
  color: rgb(229,195,149);
  font-size: 80rpx;
  font-weight: var(--fontweight-bold);
}

.card-icon{
  position: absolute;
  left: 85%;
  top: 80%;
  transform: translate(-50%, -50%);
  opacity: 0.5;
}

.small{
  width: 200rpx;
}