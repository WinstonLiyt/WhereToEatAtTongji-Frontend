/* pages/user_role_choice/user_role_choice.wxss */
page{
  background-color: var(--tertiary-color);
  height: 100%;
}

.main{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text-container{
  color: var(--secondary-color);
  font-size: 35px;
  font-weight: var(--fontweight-bold);
  margin-bottom: 30px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 80%;
}

.text-container p{
  color: #b6855d79;
  font-size: 20px;
  font-weight: var(--fontweight-normal);
}

.card-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.card{
  background-color: var(--primary-color);
  width: 65%;
  height: 130px;
  margin-bottom: 30px;
  border-radius: 25px;
  padding: 30px;
  overflow: hidden;
}


h2{
  color: rgb(229,195,149);
  font-size: 40px;
  font-weight: var(--fontweight-bold);
}

.card-icon{
  transform: translate(90rpx, -80rpx);
  opacity: 0.5;
}

.small{
  width: 100px;
}