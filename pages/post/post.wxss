    flex-direction: row;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 150rpx;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
}

