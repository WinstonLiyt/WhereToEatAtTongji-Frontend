}
.special-wrapper .tabbar_icon{
    width: 84rpx;
    height: 84rpx;
}
.special-text-wrapper{
  width: 56rpx;
  height: 56rpx;
}

.tabbar_nav {
    display: flex;
    justify-content: space-between;
}


.tabbar-comment {
    display: flex;
    width: 72%;
    align-items: center;
    justify-content: center;
    background-color: var(--tertiary-color);
}

.tabbar-comment .tabbar-comment_in {
    display: flex;
    align-items: center;
    padding: 0 10rpx;
    box-sizing: border-box;
    height: 80rpx;
    width: 100%;
    background-color: #ffffff;
    border-radius: 100rpx;
}

.tabbar-comment input {
    margin-left: 25rpx;
    width: 100%;
}

.tabbar-make-comment {
    font-size: var(--fontsize-text-sm);
}

.tabbar_nav .tabbar-reaction-box {
    display: flex;
    gap: 30rpx;
}

.tabbar_nav .tabbar-reaction-box .tabbar-reaction-item {
    display: flex;
    gap: 10rpx;
    align-items: center;
    color: var(--secondary-color);
    font-weight: var(--fontweight-normal);
}

.tabbar_nav .tabbar-reaction-box .tabbar-reaction-item text {
    font-size: var(--fontsize-text-sm);
}

.tabbar_nav .tabbar-reaction-box image {
    width: 45rpx !important;
}


/* 弹窗评论 */

.model {  
    position: fixed;  
    width: 100vw;  
    height: 100vh;  
    top: 0;  
    bottom: 0;  
    background: 
    rgba(0, 0, 0, 0.4);
    z-index: 100;
}

.model .input-box {  
    position: absolute; 
    background-color: var(--tertiary-color);  
     padding: 30rpx;  
     padding-bottom: 8%;  
     bottom: 0;  
     left: 0;  
     right: 0;  
     z-index: 101;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;

}

.model .textarea {  
    width: 100%;  
    padding: 30rpx 20rpx 20rpx 20rpx;  
    height: 600rpx;  
    font-size: var(--fontsize-h5);  
    position: static;
}

.model .send {
    position: absolute;
    display: flex;
    top: -30rpx;
    right: 30rpx;
    background-color: var(--secondary-color);
    border-radius: 100rpx;
    padding: 30rpx 30rpx;
    align-self: center;
    justify-content: center;
}

.model .send image {
    width: 80rpx;
}


.model .submit-btn {
    font-weight: var(--fontweight-bold);
    color: var(--tertiary-color);
    font-size: var(--fontsize-text-sm);
    background-color: var(--secondary-color);
    padding: 15rpx 30rpx 15rpx 30rpx;
    border-radius: 20rpx;
    float: right;  
}

.model .invisible_model{  
    position: fixed;  
    width: 100vw;  
    height: 100vh;  
    top: 0;  
    bottom: 0;
}
