/* pages/add_post/add_post.wxss */

page {
    background-color: var(--tertiary-color);
    height: 100%;
}

.main {
    height: 100%;
}

.edit-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    height: 30pt;
    font-size: 11pt;
}
.header-delive {
    color: #09BB07;
}

.edit-main,
.edit-footer {
    padding: 60rpx 60rpx;
}

.edit-main textarea {
    width: 100%;
}

.edit-text {
    /* min-height: 100rpx; */
    height: 450rpx;
    overflow-y: scroll;
    font-size: var(--fontsize-h5);
    line-height: 20pt;
    color: var(--secondary-color);
}

.edit-label {
    /* min-height: 100rpx; */
    height: 40rpx;
    overflow-y: scroll;
    font-size: var(--fontsize-text-md);
    font-weight: var(--fontweight-bold);
    line-height: 20pt;
    color: var(--secondary-color);
}

.edit-title {
    /* min-height: 100rpx; */
    height: 40rpx;
    width: 100%;
    overflow-y: scroll;
    font-size: var(--fontsize-h2);
    color: var(--primary-color);
    font-weight: var(--fontweight-bold);
    line-height: 20pt;
    color: var(--secondary-color);
}

.edit-title::placeholder {
    color: var(--primary-color); /* placeholder 的颜色 */
}

.edit-img {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content: space-between;
}
.edit-img  image.image-selected {
    width: 200rpx;
    height: 200rpx;
    margin: 0 10rpx 10rpx 0;
}
.icon-plus {
    width: 200rpx;
    height: 200rpx;
    background-color: rgba(87,107,149,0.1);
    font-size: 40pt;
    color: #888;
    line-height: 200rpx;
    text-align: center;
}
.footer-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* height: 100rpx; */
    font-size: 13pt;
}

.footer-row textarea {
    height: 100rpx;
    width: 100%;

}

.footer-row>text:nth-child(2){
    flex-grow: 1;
    text-indent: 0.5rem;
}
.icon-zuobiaonormal,
.icon-touxiang,
.icon-at,
.icon-arrow-right {
    font-size: 16pt;
}
.iconfont {
    color: #888;
}
.icon-qqkongjian,
.icon-qq {
    font-size: 18pt;
}
.mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(136,136,136,0.3);
}
.choose {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}
.chooseBar {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    font-size: 16pt;
    border-bottom: 1rpx solid rgba(87,107,149,0.1);
    background-color: white;
}
.mask-header {
    width: 100%;
    height: calc(100% - 360rpx);
}

.upload {
    background-color: var(--primary-color);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 20rpx;
}

.upload image {
    margin: 0 0 0 0;
    
}

/*  submit  */
.submit {
    display: flex;
    justify-content: flex-end;
}

.submit-btn {
    font-weight: var(--fontweight-bold);
    color: var(--tertiary-color);
    font-size: var(--fontsize-h5);
    background-color: var(--secondary-color);
    padding: 15rpx 30rpx 15rpx 30rpx;
    border-radius: 20rpx;
}